<%- include('./partials/head.ejs') %> 
<body>
    <%- include('./partials/navbar.ejs') %> 
    <div class="container" >
        <hr>
        <h1 class="corsemcorpo">Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Fazer pergunta</a>
        <br>
        <% pergunta.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3> <%= pergunta.titulo %>:</h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary">Responder</button></a>
                </div>
            </div>
        
        <% }); %>
    </div>
</body>

